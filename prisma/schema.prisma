generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  owner
  superadmin
  // Можно добавить роль для заведения, если вы будете использовать единую таблицу авторизации
  venue_manager 
}

model User {
  id        String   @id @default(cuid())
  firstName String
  lastName  String
  company   String
  email     String   @unique
  password  String
  role      Role     @default(owner)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  isSetupCompleted Boolean @default(false)
  venuesCount      Int?
  respName         String?
  respLastName     String?
  respPhone        String?
  respEmail        String?
  inn              String?
  ogrn             String?
  legalAddress     String?
  bankAccount      String?
  bik              String?
  venues           Venue[]
}

model Venue {
  id              String   @id @default(cuid())
  name            String
  type            String?
  city            String?
  address         String
  login           String   @unique
  password        String
  
  safeBalance     Int      @default(0) // В сейфе (остается у точки)
  // Поле registerBalance удалено!
  
  registers       CashRegister[] // <--- ДОБАВЛЕНО (Связь с кассами)

  ownerId         String
  owner           User     @relation(fields: [ownerId], references: [id])

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

// --- НОВАЯ ТАБЛИЦА ДЛЯ КАСС ---
model CashRegister {
  id        String   @id @default(cuid())
  name      String   // Название кассы (например, "Касса 1")
  balance   Int      @default(0) // Денег в конкретной кассе
  
  venueId   String
  venue     Venue    @relation(fields: [venueId], references: [id])
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SystemConfig {
  id    String @id @default(cuid())
  key   String @unique
  value String
}