generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  owner
  superadmin
}

model User {
  id        String   @id @default(cuid())
  firstName String
  lastName  String
  company   String
  email     String   @unique
  password  String
  role      Role     @default(owner)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // ПОЛЯ ДЛЯ ОНБОРДИНГА (добавьте это)
  isSetupCompleted Boolean @default(false)
  venuesCount      Int?
  respName         String?
  respLastName     String?
  respPhone        String?
  respEmail        String?
  inn              String?
  ogrn             String?
  legalAddress     String?
  bankAccount      String?
  bik              String?

  venues    Venue[]
}

model Venue {
  id      String @id @default(cuid())
  name    String
  type    String
  city    String
  ownerId String
  owner   User   @relation(fields: [ownerId], references: [id])
}

model SystemConfig {
  id    String @id @default(cuid())
  key   String @unique
  value String
}